import random
import sys
import os
from prettytable import PrettyTable

       
def Karte_Erstellen(h√∂he,breite,liste):
        Karte = { 

            } 
        for x in range(0,h√∂he):
            Karte[str(x+1)]=[random.choices(liste,k=breite)]
        for Zahl in Karte:
            if Zahl =='3':
                if h√∂he==5 and breite==5:
                    Karte[Zahl][0][2] = "üÉè"
            elif Zahl=='4':
                if h√∂he==7 and breite==7:
                    Karte[Zahl][0][3] = "üÉè"
       
        return Karte

def Karte_Ausgeben(Karte):
    if h√∂he==3 & breite==3:
        t = PrettyTable(['1', '2', '3'])
    elif h√∂he==5 & breite==5:
       t = PrettyTable(['1', '2', '3', '4', '5'])
    elif h√∂he==7 & breite==7:
        t = PrettyTable(['1', '2', '3', '4', '5', '6', '7'])

    for Zahl in Karte:
        
        #print('\t')
        #print(Zahl,end=':\t')
        t.add_row((Karte[Zahl][0]))
    print(t)


def gezogenes_wort(Karte, liste):

    wort_ziehen = random.choice(liste)
    for Zahl in Karte:
        y = 0
        for wort in Karte[Zahl][0]:
            if wort == wort_ziehen:
                Karte[Zahl][0][y] = "X"
            y += 1
            
    return wort_ziehen     

def Pr√ºfen(Karte,h√∂he,breite):

    sieg = False
    #Zun√§chst werden die horizontalen Gewinne nachgepr√ºft
    
    for Zahl in Karte:
        counter = 0   
        for x in range(0,int(h√∂he)):
            if Karte[Zahl][0][x]=='X':
                counter+= 1
            
        if counter is int(h√∂he):
            sieg = True
            return sieg
            
    #jetzt werden die vertikalen Gewinne nachgepr√ºft
    for x in range(0,int(h√∂he)):
        counter=0

        for Zahl in Karte:
            if Karte[Zahl][0][x]=='X':
                counter+=1
        if counter==int(h√∂he):
            sieg=True
            return sieg

    #jetzt werden die diagonalen Gewinne nachgepr√ºft
    for x in range (0,int(h√∂he)):
        y=0
        counter=0
        for Zahl in Karte:
            if Karte[Zahl][0][y]=='X':
                counter+=1
            y+=1
        if counter==int(h√∂he):
            sieg=True
            return sieg

    for x in range (int(h√∂he),-1,-1):
        y=int(h√∂he)-1
        counter=0
        for Zahl in Karte:
            if Karte[Zahl][0][y]=='X':
                counter+=1
            y-=1
        if counter==int(h√∂he):
            sieg=True
        return sieg


def restart():
    print("Spiel startet neu aufgrund von eines FehlInputs" + "\n" + "------------------------" + "\n")
    os.execv(sys.executable, ['python'] + sys.argv) 
def restarth√∂hebreite():
    print("Spiel startet neu aufgrund von eines FehlInputs")
    print("Bitte geben sie nur 3 x 3, 5 x 5, 7 x 7 ein" + "\n" + "------------------------" + "\n")
    os.execv(sys.executable, ['python'] + sys.argv) 


